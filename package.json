{
  "name": "jamon",
  "version": "0.1.0",
  "description": "Another DOM library",
  "main": "jamon.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "karma start",
    "test-once": "karma start --single-run",
    "pack": "packer -i jamon.js -o jamon.min.js -s true",
    "watch": "npm run test & onchange 'jamon.js' -- npm run pack"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamonserrano/jamon.git"
  },
  "keywords": [
    "DOM",
    "ES6"
  ],
  "author": "Viktor Honti",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jamonserrano/jamon/issues"
  },
  "homepage": "https://github.com/jamonserrano/jamon",
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-dom": "~1.4.0",
    "karma": "^0.13.21",
    "karma-calling": "^0.1.0",
    "karma-chai": "~0.1.0",
    "karma-chai-dom": "~1.1.0",
    "karma-chrome-launcher": "~0.2.2",
    "karma-coverage": "^1.0.0",
    "karma-coveralls": "^1.1.2",
    "karma-eslint": "~2.1.0",
    "karma-fixture": "~0.2.6",
    "karma-html2js-preprocessor": "~0.1.0",
    "karma-mocha": "~0.2.2",
    "karma-sauce-launcher": "~0.3.1",
    "mocha": "^2.4.5",
    "onchange": "~2.2.0",
    "packer": "0.0.6",
    "pre-commit": "~1.1.2"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "strict": "global",
    "env": {
      "browser": true,
      "es6": true
    }
  },
  "pre-commit": "test-once"
}
